{
	"tags": {
		"allowUnknownTags": true
	},
	"source": {
		"include": [
			"../enyo/src",
			"../enyo/docs/external.jsdoc",
			"../moonstone/src",
			"../moonstone-extra/src",
			"../layout/src",
			"../spotlight/src",
			"../onyx/src",
			"../canvas/src"
		],
		"includePattern": ".+\\.js(doc)?$",
		"excludePattern": "package\\.js"
	},
	"opts": {
		"encoding": "utf8",
		"recurse": true,
		"private": false,
		"lenient": false,
		"template": "."
	},
	"plugins": [
		"plugins/markdown",
		"ext/glossary",
		"ext/utility",
		"ext/ui",
		"ext/definedby"
	],
	"markdown": {
		"parser": "gfm",
		"hardwrap": false
	}
}
