{
	"tags": {
		"allowUnknownTags": true
	},
	"source": {
		"include": [
			"../enyo/lib"
//			"../enyo/docs/external.jsdoc",
//			"../lib/moonstone/lib",
//			"../lib/layout/lib",
//			"../lib/spotlight/lib",
//			"../lib/onyx/lib",
//			"../lib/canvas/lib"
		],
		"includePattern": ".+\\.js(doc)?$",
		"excludePattern": "package\\.js"
	},
	"opts": {
		"encoding": "utf8",
		"recurse": true,
		"private": false,
		"lenient": false,
		"template": "."
	},
	"plugins": [
		"plugins/markdown",
		"ext/glossary",
		"ext/utility",
		"ext/ui",
		"ext/definedby"
	],
	"markdown": {
		"parser": "gfm",
		"hardwrap": false
	}
}
